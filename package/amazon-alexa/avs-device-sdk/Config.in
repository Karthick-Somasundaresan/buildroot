menuconfig BR2_PACKAGE_AVS_DEVICE_SDK
    bool "avs-device-sdk"
    select BR2_PACKAGE_OPENSSL
    select BR2_PACKAGE_LIBCURL
    select BR2_PACKAGE_LIBCURL_ENABLE_HTTP2
    select BR2_PACKAGE_SQLITE
    help
        An SDK for commercial device makers to integrate Alexa directly into connected products.

if BR2_PACKAGE_AVS_DEVICE_SDK

choice BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_TYPE
    prompt "Build type"
    default BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_TYPE_DEBUG
    help
        Select build type

config BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_TYPE_RELEASE
    bool "Release"
    help
        Release build

config BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_TYPE_DEBUG
    bool "Debug"
    help
        Debug build

endchoice # BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_TYPE

config BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_GST_MEDIA_PLAYER
    bool "build gstreamer media player"
    select BR2_PACKAGE_GSTREAMER1
    select BR2_PACKAGE_GST1_PLUGINS_BASE
    select BR2_PACKAGE_GST1_PLUGINS_GOOD
    select BR2_PACKAGE_GST1_PLUGINS_BAD
    select BR2_PACKAGE_GST1_LIBAV
    help
        Build gstreamer media player

config BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_SAMPLE_APP
    bool "build sample app"
    default n
    select BR2_PACKAGE_GSTREAMER1
    select BR2_PACKAGE_GST1_PLUGINS_BASE
    select BR2_PACKAGE_GST1_PLUGINS_GOOD
    select BR2_PACKAGE_GST1_PLUGINS_BAD
    select BR2_PACKAGE_GST1_LIBAV
    help
        Build the sample app

if BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_SAMPLE_APP
choice BR2_PACKAGE_AVS_DEVICE_SDK_MICROPHONE_BACKEND
    prompt "Microphone backend"
    default BR2_PACKAGE_AVS_DEVICE_SDK_MICROPHONE_BACKEND_PORTAUDIO
    help
        Select the type of microphone backend.

config BR2_PACKAGE_AVS_DEVICE_SDK_MICROPHONE_BACKEND_PORTAUDIO
    bool "portaudio"
    select BR2_PACKAGE_PORTAUDIO
    help
        Use portaudio as the microphone backend.

endchoice # BR2_PACKAGE_AVS_DEVICE_SDK_MICROPHONE_BACKEND
endif # BR2_PACKAGE_AVS_DEVICE_SDK_BUILD_SAMPLE_APP

endif # BR2_PACKAGE_AVS_DEVICE_SDK
