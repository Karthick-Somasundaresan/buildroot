config BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_MODULE
	bool "playready"
	depends on (BR2_PACKAGE_PLAYREADY && BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE) || BR2_PACKAGE_HAS_PLAYREADY
	select BR2_PACKAGE_WPEFRAMEWORK_PLUGINS
	select BR2_PACKAGE_WPEFRAMEWORK_CDM
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY           if  BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_NEXUS     if !BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE &&  !BR2_PACKAGE_HAS_NEXUS_SAGE
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_NEXUS_SVP if !BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE &&  BR2_PACKAGE_HAS_NEXUS_SAGE
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_VGDRM     if !BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE &&  BR2_PACKAGE_VSS_SDK && !BR2_PACKAGE_HAS_NEXUS_SAGE
	default y
	help
	  PlayReady

config BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY
	bool

config BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_NEXUS 
	bool

config BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_NEXUS_SVP
	bool

config BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_VGDRM
	bool

if BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_MODULE
config BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_SECURE_STOP_METERING_CERTIFICATE
    depends on BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_NEXUS_SVP
    string "SecureStop metering certificate"
    default ""
    help
        Set the path where the SecureStop metering certificate can be
        found on the system. Leave empty to disable.
endif

