diff --git a/Source/interfaces/json/DIALServer.json b/Source/interfaces/json/DIALServer.json
index cf200ba7..409282ff 100644
--- a/Source/interfaces/json/DIALServer.json
+++ b/Source/interfaces/json/DIALServer.json
@@ -24,6 +24,11 @@
             "description": "Additional application-specific parameters",
             "type": "string",
             "example": "watch?v=zpp045FBbQY"
